<h1>Se connecter</h1>

<div class="container py-4 margin-bottom-10">
  <div class="row">
    <div class="col-12 col-md-6 offset-l">
      <div class="bg-white rounded p-3 shadow">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            label: "Mot de passe",
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
              </div>
                <div class="form-actions">
                  <%= f.button :submit, "Se connecter", class: "btn btn-primary text-white rounded-pill" %>
                </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
